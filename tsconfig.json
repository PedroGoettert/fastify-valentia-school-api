{
  "compilerOptions": {
    "target": "ES2022", // Compatível com Node 22
    "module": "ESNext", // Usa módulos ES
    "moduleResolution": "bundler", // Ideal para bundlers como tsup
    "lib": [
      "ES2022"
    ], // APIs modernas do JS
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true // tsup cuida do build
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}